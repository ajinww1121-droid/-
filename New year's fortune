  <script>
    // ====== Data ======
    const zodiacSigns = ['ì¥', 'ì†Œ', 'í˜¸ë‘ì´', 'í† ë¼', 'ìš©', 'ë±€', 'ë§', 'ì–‘', 'ì›ìˆ­ì´', 'ë‹­', 'ê°œ', 'ë¼ì§€'];

    const fortunes = {
      love: ['ì‚¬ë‘ì´ í™œì§ í”¼ì–´ë‚˜ëŠ” í•œ í•´', 'ì†Œì¤‘í•œ ì¸ì—°ì„ ë§Œë‚˜ëŠ” í•´', 'ê´€ê³„ê°€ ë”ìš± ëˆë…í•´ì§€ëŠ” ì‹œê¸°', 'ë”°ëœ»í•œ ë§ˆìŒì´ ì „í•´ì§€ëŠ” í•´'],
      wealth: ['ì¬ë¬¼ìš´ì´ ìƒìŠ¹í•˜ëŠ” í•´', 'ë…¸ë ¥í•œ ë§Œí¼ ê²°ì‹¤ì„ ë³´ëŠ” ì‹œê¸°', 'ê¸°íšŒê°€ ì°¾ì•„ì˜¤ëŠ” í•´', 'ì•ˆì •ì ì¸ ì¬ì • ìš´ì˜ì˜ í•´'],
      health: ['ê±´ê°•ì— í™œë ¥ì´ ë„˜ì¹˜ëŠ” í•´', 'ê·œì¹™ì ì¸ ìƒí™œë¡œ ê±´ê°• ì¦ì§„', 'ì‹¬ì‹ ì˜ ê· í˜•ì„ ì°¾ëŠ” ì‹œê¸°', 'ì—ë„ˆì§€ê°€ ì¶©ë§Œí•œ í•œ í•´'],
      career: ['ë°œì „ì˜ ê¸°íšŒê°€ ì˜¤ëŠ” í•´', 'ìƒˆë¡œìš´ ë„ì „ì´ ì„±ê³¼ë¡œ ì´ì–´ì§€ëŠ” í•´', 'ì‹¤ë ¥ì„ ì¸ì •ë°›ëŠ” ì‹œê¸°', 'ëª©í‘œ ë‹¬ì„±ì˜ í•œ í•´'],
      study: ['ìƒˆë¡œìš´ ë¶„ì•¼ì— ë„ì „í•˜ëŠ” í•´', 'ê¾¸ì¤€í•œ ë…¸ë ¥ìœ¼ë¡œ ê²°ì‹¤ì„ ë§ºëŠ” í•´', 'í•©ê²©ë¥ ì´ ë†’ì€ í•´', 'ì‹œê°„ ê´€ë¦¬ê°€ ì¤‘ìš”í•œ í•´']
    };

    // ìƒë…„ì›”ì¼ì˜ "ì—°ë„"ë¡œ ë  ê³„ì‚°ì€ ê·¸ëŒ€ë¡œ ê°€ëŠ¥
    function getZodiac(year) {
      const baseYear = 1900;
      const index = (year - baseYear) % 12;
      return zodiacSigns[(index + 12) % 12];
    }

    // =========================
    // Seeded RNG (ê³ ì • ìš´ì„¸)
    // =========================
    // ë¬¸ìì—´ì„ 32-bit ì •ìˆ˜ í•´ì‹œë¡œ
    function hashString(str) {
      let h = 2166136261; // FNV-1a base
      for (let i = 0; i < str.length; i++) {
        h ^= str.charCodeAt(i);
        h = Math.imul(h, 16777619);
      }
      return h >>> 0;
    }

    // 32-bit seed -> [0,1) ë‚œìˆ˜ ìƒì„±ê¸°
    function mulberry32(seed) {
      return function() {
        let t = seed += 0x6D2B79F5;
        t = Math.imul(t ^ (t >>> 15), t | 1);
        t ^= t + Math.imul(t ^ (t >>> 7), t | 61);
        return ((t ^ (t >>> 14)) >>> 0) / 4294967296;
      };
    }

    function pickRandomSeeded(arr, rng) {
      return arr[Math.floor(rng() * arr.length)];
    }

    // ====== Elements ======
    const elName = document.getElementById('name');
    const elBirthDate = document.getElementById('birthDate');
    const btnFortune = document.getElementById('btnFortune');

    const resultCard = document.getElementById('resultCard');
    const resultTitle = document.getElementById('resultTitle');

    const loveText = document.getElementById('loveText');
    const wealthText = document.getElementById('wealthText');
    const healthText = document.getElementById('healthText');
    const careerText = document.getElementById('careerText');
    const studyText = document.getElementById('studyText');

    const btnReset = document.getElementById('btnReset');

    const elWish = document.getElementById('wish');
    const btnLantern = document.getElementById('btnLantern');

    // Palette
    const palette = document.getElementById('palette');
    let selectedLanternColor = 'pink'; // default

    // ====== Fortune Logic (ìƒë…„ì›”ì¼ ê¸°ë°˜) ======
    btnFortune.addEventListener('click', () => {
      const name = elName.value.trim();
      const birthDate = elBirthDate.value; // YYYY-MM-DD

      if (!name || !birthDate) {
        alert('ì´ë¦„ê³¼ ìƒë…„ì›”ì¼ì„ ì…ë ¥í•˜ì„¸ìš”.');
        return;
      }

      // birthDate ìœ íš¨ì„± ì²´í¬
      const dt = new Date(birthDate + "T00:00:00");
      if (Number.isNaN(dt.getTime())) {
        alert('ìƒë…„ì›”ì¼ì„ ì˜¬ë°”ë¥´ê²Œ ì…ë ¥í•˜ì„¸ìš”.');
        return;
      }

      const birthYear = dt.getFullYear();
      if (birthYear < 1900 || birthYear > 2026) {
        alert('ìƒë…„ì›”ì¼ì˜ ì—°ë„ë¥¼ í™•ì¸í•˜ì„¸ìš”. (1900~2026)');
        return;
      }

      const zodiac = getZodiac(birthYear);

      // ì´ë¦„ + ìƒë…„ì›”ì¼ë¡œ ê³ ì • ì‹œë“œ ìƒì„±
      const seed = hashString(`${name}|${birthDate}|2026`);
      const rng = mulberry32(seed);

      const fortune = {
        love: pickRandomSeeded(fortunes.love, rng),
        wealth: pickRandomSeeded(fortunes.wealth, rng),
        health: pickRandomSeeded(fortunes.health, rng),
        career: pickRandomSeeded(fortunes.career, rng),
        study: pickRandomSeeded(fortunes.study, rng),
      };

      resultTitle.textContent = `${name}ë‹˜ì˜ ìš´ì„¸ (${zodiac}ë )`;
      loveText.textContent = fortune.love;
      wealthText.textContent = fortune.wealth;
      healthText.textContent = fortune.health;
      careerText.textContent = fortune.career;
      studyText.textContent = fortune.study;

      resultCard.style.display = 'block';
      resultCard.scrollIntoView({ behavior: 'smooth', block: 'start' });
    });

    btnReset.addEventListener('click', () => {
      resultCard.style.display = 'none';
      elName.focus();
    });

    // ====== Palette Logic ======
    palette.addEventListener('click', (e) => {
      const chip = e.target.closest('.chip');
      if (!chip) return;

      selectedLanternColor = chip.dataset.color;

      [...palette.querySelectorAll('.chip')].forEach(btn => {
        btn.setAttribute('aria-pressed', btn === chip ? 'true' : 'false');
      });
    });

    // =========================
    // Lantern: ignite -> fly
    // =========================
    let lanternCooldown = false;

    btnLantern.addEventListener('click', () => {
      const wish = elWish.value.trim();
      if (!wish) return;

      if (lanternCooldown) return;
      lanternCooldown = true;
      setTimeout(() => (lanternCooldown = false), 220);

      const lantern = document.createElement('div');
      lantern.className = 'lantern igniting';
      lantern.dataset.color = selectedLanternColor;

      lantern.style.left = (Math.random() * 78 + 11) + '%';

      lantern.innerHTML = `
        <div class="box">
          <div class="glow" aria-hidden="true"></div>
          <div class="text"></div>
          <div class="frame" aria-hidden="true"><div class="bar"></div></div>
          <div class="candleArea" aria-hidden="true">
            <div class="candle">
              <div class="flame"></div>
            </div>
          </div>
          <div class="status">ì í™” ì¤‘â€¦</div>
        </div>
      `;

      lantern.querySelector('.text').textContent = wish;
      document.body.appendChild(lantern);
      elWish.value = '';

      setTimeout(() => lantern.classList.add('lit'), 500);
      setTimeout(() => {
        lantern.classList.remove('igniting');
        lantern.classList.add('flying');
      }, 1150);

      setTimeout(() => lantern.remove(), 7600);
    });

    // Ctrl+Enterë¡œ í’ë“± ë‚ ë¦¬ê¸°
    document.addEventListener('keydown', (e) => {
      if ((e.ctrlKey || e.metaKey) && e.key === 'Enter' && document.activeElement === elWish) {
        btnLantern.click();
      }
    });
  </script>
</body>
</html>
